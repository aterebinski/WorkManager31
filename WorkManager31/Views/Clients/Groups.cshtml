@model WorkManager31.Models.ClientGroupsCheckListViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>

<form asp-action="Groups">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="card">
        <!-- Default panel contents -->
        
        <div class="card-body">
            <h5 class="card-title">Groups</h5>
            <div class="card-text">
                <div class="form-group">

                @foreach (var item in Model.Checks)
                {

                    <div class="checkbox">
                        @Html.CheckBoxFor(i => item.)
                        <label>
                            <input type="checkbox" value="@item.Key.Id">
                            @item.Key.Name
                        </label>
                    </div>
                }

                </div>
            </div>
        </div>
    </div>
    <p>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    </p>
</form>
<a asp-action="Index">Back to List</a>

