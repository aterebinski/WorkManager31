@model WorkManager31.Models.ClientGroupsCheckListViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Groups</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="Name" class="form-control" />
            
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(m => m.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(m => m.Description)
        </dd>
    </dl>
</div>

    @using (Html.BeginForm("Groups", "Clients", FormMethod.Post))
    {
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.Name" />
    <input type="hidden" asp-for="@Model.Description" />
    <div class="card">
        <!-- Default panel contents -->
        
        <div class="card-body">
            <h5 class="card-title">Groups</h5>
            <div class="card-text">
                <div class="form-group">

                @for(var i = 0; i<Model.clientGroups.Count();i++)
                {
                    <div class="form-group form-check">
                        
                        @Html.CheckBoxFor(m => m.Checks[Model.clientGroups[i].Id]);
                        <label class="form-check-label">@Model.clientGroups[i].Name</label>
                    </div>
                }

                </div>
            </div>
        </div>
    </div>
    <p>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    </p>
}
<a asp-action="Index">Back to List</a>

